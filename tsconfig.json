{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "lib": [
      "ES2024"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}